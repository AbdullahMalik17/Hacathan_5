# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/customer_success
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=20
DB_QUERY_TIMEOUT=30

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=agent-workers
KAFKA_PARTITION_COUNT=12

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Gmail API Configuration
GMAIL_SERVICE_ACCOUNT_PATH=./credentials/gmail-service-account.json
GMAIL_SUPPORT_EMAIL=support@company.com

# Application Configuration
LOG_LEVEL=INFO
AGENT_RESPONSE_TIMEOUT=180
CORRELATION_ID_HEADER=X-Correlation-ID

# Performance Configuration
MAX_CONCURRENT_CONVERSATIONS=1000
KNOWLEDGE_BASE_SIMILARITY_THRESHOLD=0.6
MESSAGE_RETRY_MAX_ATTEMPTS=5
MESSAGE_RETRY_BACKOFF_FACTOR=2

# Security Configuration
WEBHOOK_SECRET_KEY=your-webhook-secret-key
JWT_ALGORITHM=HS256
